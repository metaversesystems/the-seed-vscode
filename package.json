{
	"name": "@metaverse-systems/the-seed-vscode",
	"displayName": "the-seed-vscode",
	"description": "GUI for The Seed",
	"version": "0.0.1",
	"enableProposedApi": true,
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:configOptions"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "configOptions.editEntry",
				"title": "Edit",
				"icon": {
				  "light": "resources/light/edit.svg",
				  "dark": "resources/dark/edit.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "the-seed",
					"title": "The Seed",
					"icon": "resources/circle-outline.svg"
				}
			]
		},
		"views": {
			"the-seed": [
				{
					"id": "configOptions",
					"name": "Configuration"
				},
				{
					"id": "dependencies",
					"name": "Dependencies"
				},
				{
					"id": "projects",
					"name": "Projects"
				}
			]
		},
                "menus": {
                  "view/item/context": [
                    {
                      "command": "configOptions.editEntry",
                      "when": "view == configOptions && viewItem == TreeBranch",
                      "group": "inline"
                    }
                  ]
                }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/metaversesystems/the-seed-vscode.git"
	},
	"author": "Tim Schwartz <tim@metaverse.systems>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/metaversesystems/the-seed-vscode/issues"
	},
	"homepage": "https://github.com/metaversesystems/the-seed-vscode#readme",
	"dependencies": {
		"@metaverse-systems/the-seed-utils": "0.0.3"
	}
}
